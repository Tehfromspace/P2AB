{% extends 'IngetisSiteBundle::admin.html.twig' %}
{% block titreSection %}News{% endblock %}
{% block titrePage %}Ajout de News{% endblock %}
{% block Section %}News{% endblock %}
{% block SousSection %}News{% endblock %}
{% block body %}
<form action="{% if id == 0 %}{{ path('ingetis_add_news') }}{% else %}{{ path('ingetis_edit_news', {id:id}) }}{% endif %}" method="post" role="form">
  <div class="form-group">
    <label for="Titre">{{ form_label(form.titreActualite) }}</label>
    {{ form_widget(form.titreActualite, {'id':'titre','attr': {'class':'form-control'} }) }}
  </div>
  <div class="form-group">
    <label for="Texte">{{ form_label(form.texteActualite) }}</label>
    {{ form_widget(form.texteActualite, {'id':'texte','attr': {'class':'form-control','rows':'6'} }) }}
  </div>
  <div class="form-group">
    <label for="Image">{{ form_label(form.photoActualite) }}</label>
    {{ form_widget(form.photoActualite, {'id':'photo','attr': {'class':'form-control'} }) }}
    <p class="help-block">Saisir L'URL de la photo.</p>
  </div>
  <div class="checkbox">
    <label>
      {{ form_widget(form.event) }} {{ form_label(form.event) }}
    </label>
  </div>
  <input type="submit" class="btn btn-default" value="Envoyer"/>
{{ form_end(form) }}
{% endblock %}
{% block javascript %}
<script type="text/javascript">
tinymce.init({
    selector: "textarea#texte",
    theme: "modern",
  skin: 'light',
  language : 'fr_FR',
  browser_spellcheck : true,
  paste_as_text: true,
  height : 300,
  plugins: ["textcolor fullscreen wordcount spellchecker image link searchreplace code paste"],
  toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
    toolbar2: "fullscreen forecolor backcolor"
});
</script>
{% endblock %}